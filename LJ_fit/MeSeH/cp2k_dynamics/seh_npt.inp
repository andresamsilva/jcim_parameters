@SET temp 300

&GLOBAL
 PROJECT nptseh
 RUN_TYPE MD
 PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIAL
    CHARGE 0
    MULTIPLICITY 1

    &MGRID
       CUTOFF 500 
       REL_CUTOFF 60
    &END MGRID
 
    &SCF
       &OT 
         PRECONDITIONER FULL_SINGLE_INVERSE
         MINIMIZER DIIS
       &END OT
       SCF_GUESS ATOMIC
       EPS_SCF 1.0E-6
       MAX_SCF 500
       CHOLESKY INVERSE
    &END SCF

    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC [angstrom] 15.39 16.82 16.31
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME sehwat.xyz
      COORD_FILE_FORMAT XYZ
     
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END

    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
    &KIND Se
      BASIS_SET DZVP-MOLOPT-PADE-GTH-q6
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NPT_F
    TEMPERATURE [K] 300
    TIMESTEP [fs] 1.0
    STEPS 1000

    &THERMOSTAT
      TYPE NOSE
      &NOSE
        TIMECON 10.0
      &END NOSE
    &END THERMOSTAT

    &BAROSTAT
      PRESSURE 1.0E0
    &END BAROSTAT
  &END MD


  &PRINT
    &TRAJECTORY
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
   
    &VELOCITIES
    &END VELOCITIES

    &FORCES OFF
    &END FORCES
  &END PRINT
&END MOTION
